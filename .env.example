# AppWhistler Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appwhistler
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# AI Integration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Blockchain Configuration (Optional)
# Use either Infura OR Alchemy, not both
INFURA_PROJECT_ID=your_infura_project_id
# ALCHEMY_API_KEY=your_alchemy_api_key

# Ethereum Network (mainnet, goerli, sepolia, etc.)
NETWORK=goerli

# Private key for blockchain transactions (Optional - for contract deployment only)
# WARNING: Never commit this! Use a dedicated development wallet with minimal funds
# PRIVATE_KEY=your_ethereum_private_key_here

# Scraper Configuration
SCRAPER_RATE_LIMIT_MS=1000
SCRAPER_USER_AGENT=AppWhistlerBot/1.0 (+https://github.com/aresforblue-ai/appwhistler)

# Security Configuration
LOGIN_MAX_FAILED_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
PASSWORD_RESET_TOKEN_TTL_MIN=60
PASSWORD_RESET_BASE_URL=http://localhost:3000

# External Services (Optional)
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENTRY_DSN=your_sentry_dsn
# PINATA_API_KEY=your_pinata_api_key
# PINATA_SECRET_API_KEY=your_pinata_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
VITE_API_URL=http://localhost:5000
