# ========================================
# AppWhistler Environment Configuration
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ========================================
# Server Configuration
# ========================================
PORT=5000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appwhistler
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_MAX_CONNECTIONS=20

# ========================================
# Authentication & Security
# ========================================
JWT_SECRET=your_long_random_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
PASSWORD_RESET_TOKEN_TTL_MIN=60
PASSWORD_RESET_BASE_URL=http://localhost:3000/reset-password

# Account Security
LOGIN_MAX_FAILED_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# ========================================
# AI / HuggingFace Configuration
# ========================================
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# Get your API key at: https://huggingface.co/settings/tokens

# ========================================
# Blockchain Configuration (Optional)
# ========================================
# Choose ONE of the following RPC providers:
INFURA_PROJECT_ID=your_infura_project_id_here
# OR
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Blockchain Network (goerli, sepolia, mainnet)
NETWORK=goerli

# Optional: Wallet private key for contract deployment and transactions
# WARNING: NEVER commit this to version control!
PRIVATE_KEY=your_wallet_private_key_here_optional

# ========================================
# File Uploads (IPFS/Pinata)
# ========================================
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
# Get your keys at: https://www.pinata.cloud/

# ========================================
# Email Service (SendGrid)
# ========================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@appwhistler.com
SENDGRID_FROM_NAME=AppWhistler
# Get your API key at: https://sendgrid.com/

# ========================================
# CDN Configuration (Optional)
# ========================================
CDN_URL=https://your-cdn-domain.com
# CloudFlare, CloudFront, or other CDN for static assets

# ========================================
# Error Monitoring (Sentry - Optional)
# ========================================
SENTRY_DSN=your_sentry_dsn_here
# Get your DSN at: https://sentry.io/

# ========================================
# Redis Cache (Optional)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_optional

# ========================================
# Scraper Configuration
# ========================================
SCRAPER_RATE_LIMIT_MS=1000
SCRAPER_USER_AGENT=AppWhistlerBot/1.0 (+https://github.com/aresforblue-ai/appwhistler)

# ========================================
# Feature Flags (Optional)
# ========================================
ENABLE_BLOCKCHAIN=false
ENABLE_EMAIL=false
ENABLE_REDIS_CACHE=false
ENABLE_FILE_UPLOADS=true

# ========================================
# Testing Configuration (For CI/CD)
# ========================================
# TEST_DB_NAME=appwhistler_test
# TEST_DB_USER=postgres
# TEST_DB_PASSWORD=test_password
